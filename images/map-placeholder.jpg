<svg width="600" height="400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 400">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0B0B0B;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1A1A1A;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="goldGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#D4AF37;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8D6E27;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="600" height="400" fill="url(#bgGrad)"/>
  
  <!-- Map grid -->
  <g opacity="0.3">
    <line x1="0" y1="100" x2="600" y2="100" stroke="#FFFFFF" stroke-width="0.5"/>
    <line x1="0" y1="200" x2="600" y2="200" stroke="#FFFFFF" stroke-width="0.5"/>
    <line x1="0" y1="300" x2="600" y2="300" stroke="#FFFFFF" stroke-width="0.5"/>
    <line x1="150" y1="0" x2="150" y2="400" stroke="#FFFFFF" stroke-width="0.5"/>
    <line x1="300" y1="0" x2="300" y2="400" stroke="#FFFFFF" stroke-width="0.5"/>
    <line x1="450" y1="0" x2="450" y2="400" stroke="#FFFFFF" stroke-width="0.5"/>
  </g>
  
  <!-- Location marker -->
  <circle cx="300" cy="200" r="8" fill="url(#goldGrad)"/>
  <path d="M300 190 Q305 185 300 180 Q295 185 300 190 Z" fill="url(#goldGrad)"/>
  
  <!-- Roads -->
  <path d="M100 200 L500 200" stroke="#C9C9C9" stroke-width="3" opacity="0.6"/>
  <path d="M300 50 L300 350" stroke="#C9C9C9" stroke-width="2" opacity="0.4"/>
  
  <!-- Text -->
  <text x="300" y="240" font-family="Arial, sans-serif" font-size="24" font-weight="bold" text-anchor="middle" fill="url(#goldGrad)">Store Location</text>
  <text x="300" y="260" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="#FFFFFF" opacity="0.8">Phoenix, Arizona</text>
  
  <!-- Border -->
  <rect x="10" y="10" width="580" height="380" fill="none" stroke="url(#goldGrad)" stroke-width="2" stroke-dasharray="10,5" opacity="0.3"/>
  
  <!-- Bottom text -->
  <text x="300" y="380" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="#FFFFFF" opacity="0.4">map-placeholder.jpg - Replace with Google Maps screenshot</text>
</svg>
